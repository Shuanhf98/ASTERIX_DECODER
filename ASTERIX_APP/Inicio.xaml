<Window x:Class="ASTERIX_APP.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASTERIX_APP"
        mc:Ignorable="d"
        d:DesignHeight="400" d:DesignWidth="800" Background="#222"
        Title="Inicio" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid Height="400" Width="800">
                <Label HorizontalAlignment="Center" Margin="0,32,0,0" Content="Welcome to ASTERIX decoder application"  VerticalAlignment="Top" Width="600" Background="#222" FontFamily="Century Gothic" FontSize="25" Foreground="Gray"/>
                <Button x:Name="Start" Click ="Start_Click" Content="START" Margin="0,0,41,48" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Gray" Foreground="Black" Width="70"/>
                <Image  Opacity="0.65" Height="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Images/Eurocontrol_logo_2010.svg.png" Margin="24,0,0,30" />
            </Grid>
        </StackPanel>

    </Grid>
</Window>

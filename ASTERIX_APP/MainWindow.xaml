<Window x:Class="ASTERIX_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        xmlns:local="clr-namespace:ASTERIX_APP"
        mc:Ignorable="d"
        Title="Asterix Decoder App" Height="700" Width="1200" Background="#222" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid x:Name="pantalla" RenderTransformOrigin="0.231,0.458" Margin="0">
        <StackPanel Margin="0" Height="Auto" VerticalAlignment="Stretch">
            <!-- Buttons -->
            <Grid Margin="5" Height="465">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Button x:Name="LoadButton" Click="LoadFile_Click" Grid.Column="0" Grid.Row="0" Content="Load File" Background="#222" Foreground="#fff" Padding="5" BorderThickness="0 1 0 1"/>
                <Button x:Name="TableButton" Click="TableTrack_Click" Grid.Column="1" Grid.Row="0" Content="Tracking Table" Background="#222" Foreground="#fff" Padding="5" BorderThickness="1 1 1 1" Visibility="Collapsed"/>
                <Button x:Name="MapButton" Click="MapTrack_Click" Grid.Column="2" Grid.Row="0" Content="Tracking Map" Background="#222" Foreground="#fff" Padding="5" BorderThickness="0 1 1 1" Visibility="Collapsed"/>
                <Button x:Name="ExitButton" Click="Exit_Click" Grid.Column="3" Grid.Row="0" Content="Exit" Background="#222" Foreground="#fff" Padding="5" BorderThickness="0 1 0 1"/>
            </Grid>
        </StackPanel>
        <Label x:Name="Instructions_Label" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#fff" Visibility="Hidden"/>
        <Image Opacity="0.65" Height="75" HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="./Images/upc-logo.png"/>

            <!-- Data Table -->
            <DataGrid x:Name="Track_Table" Padding="5"
                              Margin="0 40 0 0" Background="#222" 
                              Visibility="Hidden" IsReadOnly="True" 
                              BorderBrush="#000" BorderThickness="1" 
                              ItemsSource="{Binding}">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#004778"/>
                        <Setter Property="Foreground" Value="#fff"/>
                        <Setter Property="Margin" Value="0 0 1 1"/>
                        <Setter Property="Padding" Value="5"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="Background" Value="#222"/>
                        <Setter Property="Foreground" Value="#fff"/>
                        <Setter Property="BorderBrush" Value="#000"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
            <!-- Map -->
            <gmaps:GMapControl x:Name="map" BorderBrush="Black" Margin="500,150,10,10" 
                               Loaded ="Map_Load" Visibility="Hidden" BorderThickness="1">
                
            </gmaps:GMapControl>
            <DataGrid x:Name ="gridlista" Margin="10,300,710,10" 
                      RenderTransformOrigin="0.5,0.5" Background="#222" 
                      Foreground="white" Visibility="Hidden"  
                      IsReadOnly="True" BorderBrush="#FFF5F6F7" 
                      RowBackground="Black" CanUserSortColumns="False" 
                      CanUserResizeRows="False" ColumnWidth="*" >

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#004778"/>
                    <Setter Property="Foreground" Value="#fff"/>
                    <Setter Property="Margin" Value="0 0 1 1"/>
                    <Setter Property="Padding" Value="3"/>
                    <Setter Property="BorderThickness" Value="0 0 1 1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Background" Value="#222"/>
                    <Setter Property="Foreground" Value="#fff"/>
                    <Setter Property="BorderBrush" Value="#000"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>      
    </Grid>
</Window>